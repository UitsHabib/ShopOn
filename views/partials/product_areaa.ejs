        <!-- Start Our Product Area -->
        <section class="htc__product__area ptb--130 bg__white">

			<!-- loop for containers (categorie name) -->
			<% var i=0; prod_set.forEach(function(st){ %>
				<% i++; %>
			<!-- Start first sliding here --> 
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<h2><b> <%= st %> </b></h2> <!-- categorie name -->
						<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="0">
						 
							<!-- Wrapper for carousel items -->
							<div class="carousel-inner">
						
								<!-- first 4 pictures -->
								<div class="item carousel-item active">
									<div class="row" id='<%= st %>'> <!-- id = categorie name -->
										<!-- loop for products  of it's categorie -->
										<% products.forEach(function(product){ %>
											<% if(st == product.categorie_name){ %>
												<% include grid.ejs %>
											<% } %>
										<% }); %>
										
									</div>
								</div>
							</div>
		
							
							<a class="prev" onclick="plusSlidesDepartment<%=i%>(-1)">&#10094;</a>
							<a class="next" onclick="plusSlidesDepartment<%=i%>(1)">&#10095;</a>
							
							<script>
								// slides for all departments
								var slidesDepartment<%=i%> = document.getElementById('<%=  st %>').getElementsByClassName("col-sm-3"); 
								
								// begin and end for all departments
								var beginDepartment<%=i%> = 0, endDepartment<%=i%> = 3; 
								
								// initially show all images
								showSlides(beginDepartment<%=i%>, endDepartment<%=i%>, slidesDepartment<%=i%>);
								
								// all functions to move images
								function plusSlidesDepartment<%=i%>(n) {
									if(beginDepartment<%=i%> == 0 && n==-1) {}
									else if(endDepartment<%=i%> == slidesDepartment<%=i%>.length - 1 && n==1) {}
									else {
										beginDepartment<%=i%> += n;
										endDepartment<%=i%> += n;
									} 
									showSlides(beginDepartment<%=i%>, endDepartment<%=i%>, slidesDepartment<%=i%>);
								}

								// function to show slides
								function showSlides(b, e, x) {
									var i;  
									for (i = 0; i < x.length; i++) {
										if(i>=b && i<=e) x[i].style.display = "block";
										else x[i].style.display = "none";  
									}	 
								}
							</script>
				
						</div>
					</div>
				</div>
			</div>
			<!-- End First Sliding -->
			<% }); %>
        
        </section>
        <!-- End Our Product Area -->